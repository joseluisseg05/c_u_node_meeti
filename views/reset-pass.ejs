<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePag %></h1>

    <form class="default-form" action="/reset-pass" method="POST">
        <div class="campo">
            <label>Contraseña Anterior</label>
            <input type="password" name="anterior" placeholder="Escribe tu contraseña anterior">
        </div>
        <div class="campo">
            <label>Nueva Contraseña</label>
            <input type="password" name="nueva" placeholder="Escribe tu nueva contraseña">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Cambiar Contraseña">
        </div>
    </form>
</main>