<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePag %> </h1>
    <form method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre del Grupo" value="<%= grupo.nombre %> ">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" name="descripcion" id="x" value="<%= grupo.descripcion %> ">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoría</label>
            <select name="categoriaId">
                <option value="" selected disabled>--  Elije una Categoría  --</option>
                <% categorias.forEach(categoria => {  %>
                    <option value="<%= categoria.id %>"
                        <%= (grupo.categoriaId === categoria.id ) ? 'selected' : '' %>
                    >
                        <%= categoria.nombre %>
                    </option>
                <% })  %>
            </select>
        </div>
        <div class="campo">
            <label>Sitio Web</label>
            <input type="url" name="url" value="<%= grupo.url %> " placeholder="Ingresa la Url de tu Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Crear Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>