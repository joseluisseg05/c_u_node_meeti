<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePag %> </h1>
    <form method="POST" class="default-form" enctype="multipart/form-data">
        <legend>Sube tu imagen que se mostrara junto a biograf√≠a</legend>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
        </div>
        <% if (usuario.imagen) { %>
            <div class="campo">
                <label>Imagen Actual </label>
                <img src="/uploads/perfiles/<%= usuario.imagen %> " width="400" alt="Imagen de usuario <%= usuario.nombre %> ">
            </div>
            
        <% } else { %>
            <p>No hay Imagen Actual</p>
        <% } %>
        <div class="campo enviar">
            <input type="submit" value="Subir Imagen" class="btn btn-rosa">
        </div>
    </form>
</main>